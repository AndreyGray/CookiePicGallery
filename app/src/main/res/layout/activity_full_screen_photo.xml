<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBDBD"
    tools:context=".FullScreenPhoto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_full"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/full_screen_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/card_full">
        <TextView
            android:id="@+id/owner_title"
            android:text="Owner:"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/owner_pic"
            android:text="Owner:"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_container">
        <TextView
            android:id="@+id/license_title"
            android:text="License:"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/license_pic"
            android:text="License:"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>